<script>
let activePopup = null;
let activeButton = null;

function showPopup(button) {
  const popup = button.querySelector('.popup');
  document.querySelectorAll('.popup').forEach(p => p.style.display = 'none');
  activePopup = popup;
  activeButton = button;

  if (popup) {
    popup.style.display = 'block';
  }
}

document.querySelectorAll('.image-button').forEach(button => {
  button.addEventListener('click', () => {
    const isAlreadyOpen = activePopup && button.contains(activePopup);
    if (isAlreadyOpen) {
      activePopup.style.display = 'none';
      activePopup = null;
    } else {
      showPopup(button);
    }
  });

  button.addEventListener('mouseleave', (e) => {
    setTimeout(() => {
      if (activePopup && !activePopup.matches(':hover') && !button.matches(':hover')) {
        activePopup.style.display = 'none';
        activePopup = null;
      }
    }, 100);
  });
});

document.addEventListener('click', function(e) {
  if (
    activePopup &&
    !e.target.closest('.popup') &&
    !e.target.closest('.image-button')
  ) {
    activePopup.style.display = 'none';
    activePopup = null;
  }
});

function showSubpage() {
  document.getElementById('mainpage').classList.remove('active');
  document.getElementById('subpage').classList.add('active');
}

function showMainpage() {
  document.getElementById('subpage').classList.remove('active');
  document.getElementById('mainpage').classList.add('active');
}
</script>

